extends layout

block content
  #loading Loading...
  #loaded.hidden
    #main
      #user-signed-in.hidden
        .columns
          .column
          .column 
          .column 
            .card(style='margin-top: 20px;')
              .card-content
                .media
                  .media-left
                    figure(class='image', style='height: 80px; width: 80px;') 
                      img#photo
                  .media-content
                    p.title.is-4#name
                    p.subtitle.is-6#email
          .column 
          .column
          .clearfix
        .columns
          .column
          .column
          .column
            .card
              .card-header
                p.card-header-title.resumeTitle
                  | Upload Your Resume
              .card-content
                h6 Choose Resume 
                input(type="file" id="file" name="file")
                h6 File
                span#linkbox
            .card.is-mobile
              .card-header
                p.card-header-title
                  | QR Code
              .card-content
                .content
                  #qrcode
          .column
          .column
          .clearfix
        .columns
          .column
          .column
          .column
            .card.but
              button.button.is-danger#delete-account Delete account
          .column
          .column
      #user-signed-out.hidden
        #firebaseui-spa
          #firebaseui-container
  script(src='/js/app.js')
  script(src='/js/fileUpload.js')
  script(src='/js/index.js')
