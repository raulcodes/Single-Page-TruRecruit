    link(type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.3.1/css/bulma.css")

  body
    block content
      section.hero.is-fullheight.is-medium.is-primary.is-bold
        .hero-body
          .container
            .columns.is-vcentered
              .column.is-4.is-offset-4
                h1.title.has-text-centered
                  | Register an Account
                form.box(method="post")
                  h4.error= error
                  label.label 
                    | Email 
                    span(style="color: red;") *
                  p.control
                    input.input(type='text', name="email" placeholder='jsmith@example.org')
                  label.label 
                    | Confrim Email 
                    span(style="color: red;") *
                  p.control
                    input.input(type='text', id="email" name="cemail" placeholder='jsmith@example.org')
                  hr
                  label.label 
                    | Password 
                    span(style="color: red;") *
                  p.control
                    input.input(type='password', id="password" name="password" placeholder='●●●●●●●')
                  label.label 
                    | Confirm Password 
                    span(style="color: red;") *
                  p.control
                    input.input(type='password', id="cpassword" name="cpassword" placeholder='●●●●●●●')
                  hr
                  p.control.columns
                    .column.is-12
                      p.has-text-centered(style="color: gray;") or continue with...
                      a.button.fb.has-text-centered.is-primary
                        i.fa.fa-facebook
                      a.button.go.has-text-centered
                        i.fa.fa-google
                  hr
                  p.control
                    input.button.is-primary#submit(type="submit" value="Sign Up")
                    a.button.cancel.is-default(href='/') Cancel
                p.has-text-centered
                  a(href='/login') Login |           
                  a(href='#')  Need help?
